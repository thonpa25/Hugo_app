#!/bin/bash
# CloudCannon preinstall script

echo "CloudCannon Preinstall: Verifying theme..."

# Navigate to source directory
cd /usr/local/__site/src/ || exit 1

# Check if themes directory exists
if [ ! -d "themes" ]; then
    echo "ERROR: themes directory not found!"
    exit 1
fi

# Check if bigspring theme exists
if [ -d "themes/bigspring" ]; then
    echo "Theme 'bigspring' verified successfully"
else
    echo "ERROR: Theme 'bigspring' not found!"
    ls -la themes/
    exit 1
fi

echo "Theme verification complete!"