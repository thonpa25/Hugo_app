# Netlify Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Netlify Build Hook URL
# Get this from: Netlify Dashboard > Site Settings > Build & Deploy > Build hooks
NETLIFY_BUILD_HOOK=https://api.netlify.com/build_hooks/YOUR_HOOK_ID

# Netlify Site ID (for CLI and GitHub Actions)
# Get this from: Netlify Dashboard > Site Settings > General > Site ID
NETLIFY_SITE_ID=your-site-id-here

# Netlify Auth Token (for CLI and GitHub Actions)
# Get this from: Netlify User Settings > Applications > Personal Access Tokens
NETLIFY_AUTH_TOKEN=your-auth-token-here

# Site URL (your deployed site)
NETLIFY_SITE_URL=https://your-site.netlify.app

# Environment
NODE_ENV=production
HUGO_ENVIRONMENT=production