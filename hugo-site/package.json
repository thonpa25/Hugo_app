{
  "name": "hugo-site-shell",
  "version": "1.0.0",
  "description": "Simple Hugo site shell for client projects",
  "scripts": {
    "dev": "hugo server -D",
    "build": "hugo --minify",
    "clean": "rm -rf public resources",
    "deploy": "hugo --minify && netlify deploy --prod --dir=public",
    "deploy:preview": "hugo --minify && netlify deploy --dir=public",
    "deploy:manual": "node scripts/deploy.js",
    "netlify:dev": "netlify dev",
    "netlify:login": "netlify login",
    "netlify:link": "netlify link",
    "netlify:status": "netlify status",
    "netlify:open": "netlify open",
    "deploy:cloudcannon": "node scripts/deploy-cloudcannon.js",
    "sync": "git add -A && git commit -m 'Sync to CloudCannon' && git push origin main",
    "deploy:all": "npm run deploy:cloudcannon && npm run deploy:manual"
  },
  "keywords": [
    "hugo",
    "static-site",
    "bigspring",
    "netlify",
    "jamstack"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "netlify-cli": "^16.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "hugo": ">=0.129.0"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "homepage": ""
}