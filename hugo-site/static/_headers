# Netlify _headers file for Hugo site
# Additional headers beyond netlify.toml configuration

# Global security headers for all pages
/*
  # Security headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=()
  
  # Enhanced Content Security Policy - OWASP Compliant (removed 'unsafe-inline')
  Content-Security-Policy: default-src 'self'; script-src 'self' 'nonce-{RANDOM}' https://www.gstatic.com https://www.recaptcha.net https://cdnjs.cloudflare.com; style-src 'self' 'nonce-{RANDOM}' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://img.youtube.com https://i.vimeocdn.com; frame-src 'self' https://www.youtube.com https://www.youtube-nocookie.com https://player.vimeo.com https://www.google.com; connect-src 'self' https://www.google.com https://www.recaptcha.net; object-src 'none'; base-uri 'self'; form-action 'self' https://formspree.io; frame-ancestors 'none'; upgrade-insecure-requests; block-all-mixed-content
  
  # Additional Security Headers
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  Feature-Policy: geolocation 'none'; microphone 'none'; camera 'none'; payment 'none'; usb 'none'; magnetometer 'none'; gyroscope 'none'

# Static assets with long-term caching
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/images/*
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# CSS and JS files
*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css; charset=utf-8

*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript; charset=utf-8

# Image optimization headers
*.jpg
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

*.png
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

*.webp
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

*.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml; charset=utf-8

# Font files
*.woff2
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff2
  Access-Control-Allow-Origin: *

*.woff
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: font/woff
  Access-Control-Allow-Origin: *

# XML files (sitemap, feeds)
*.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/xml; charset=utf-8

# JSON files
*.json
  Cache-Control: public, max-age=3600
  Content-Type: application/json; charset=utf-8

# HTML files (shorter cache for content)
*.html
  Cache-Control: public, max-age=3600
  Vary: Accept-Encoding

# Manifest and service worker
/manifest.json
  Cache-Control: public, max-age=86400
  Content-Type: application/manifest+json

/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# API endpoints (if using Netlify Functions)
/.netlify/functions/*
  Cache-Control: no-cache, no-store, must-revalidate
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Headers: Content-Type
  Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS

# RSS and Atom feeds
/index.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/rss+xml; charset=utf-8

/feed.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/rss+xml; charset=utf-8

/atom.xml
  Cache-Control: public, max-age=3600
  Content-Type: application/atom+xml; charset=utf-8

# Sitemap
/sitemap.xml
  Cache-Control: public, max-age=86400

# Robots.txt
/robots.txt
  Cache-Control: public, max-age=86400