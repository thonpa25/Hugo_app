#!/bin/bash
# CloudCannon prebuild script to install Hugo

echo "Installing Hugo for CloudCannon build..."

# Download and install Hugo
HUGO_VERSION="0.129.0"
wget -q "https://github.com/gohugoio/hugo/releases/download/v${HUGO_VERSION}/hugo_extended_${HUGO_VERSION}_Linux-64bit.tar.gz"
tar -xzf "hugo_extended_${HUGO_VERSION}_Linux-64bit.tar.gz"
chmod +x hugo
sudo mv hugo /usr/local/bin/

# Verify installation
echo "Hugo version:"
hugo version

echo "Hugo installation complete!"